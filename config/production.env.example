# Production Environment Configuration
# Copy this file to production.env and update values for your environment

# Database Configuration
DB_HOST=localhost
DB_NAME=contract_manager
DB_USER=contract_user
DB_PASS=your_secure_password

# Application Configuration
APP_ENV=production
APP_DEBUG=false

# Session Configuration
SESSION_TIMEOUT=7200
SESSION_SECURE_COOKIE=true
SESSION_SAMESITE=Strict

# CORS Configuration - Add your domain(s)
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Security Configuration
CSRF_TOKEN_ENABLED=true

# Logging Configuration
LOG_LEVEL=warning
LOG_FILE=/var/log/contract_manager/app.log

# Rate Limiting
RATE_LIMIT=100