# Local Development Environment Configuration (Docker)
# This file is for local Docker testing only
# DO NOT use in production or commit with real values

# Database Configuration (Docker)
DB_HOST=host.docker.internal
DB_NAME=contract_manager
DB_USER=contract_user
DB_PASS=local_password_change_me

# Application Configuration
APP_ENV=development
APP_DEBUG=true

# Session Configuration
SESSION_TIMEOUT=7200
SESSION_SECURE_COOKIE=false
SESSION_SAMESITE=Lax
SESSION_COOKIE_LIFETIME=0

# CORS Configuration (for local testing)
CORS_ORIGIN=http://localhost:8080,http://127.0.0.1:8080,http://localhost:3000

# Security Configuration
CSRF_TOKEN_ENABLED=false

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=/tmp/app.log

# Rate Limiting
RATE_LIMIT=1000
