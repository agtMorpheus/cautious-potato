# API Routing Configuration (Phase 5)
# This file enables clean URLs for the REST API

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /api/
    
    # Don't rewrite requests for existing files or directories
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Route all requests to index.php
    RewriteRule ^(.*)$ index.php?request=$1 [QSA,L]
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "DENY"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Prevent directory listing
Options -Indexes

# Deny access to sensitive files
<FilesMatch "^(config\.php|\.env|\.htaccess)$">
    Require all denied
</FilesMatch>

# PHP settings (if using .htaccess for PHP config)
<IfModule mod_php.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 12M
    php_value max_execution_time 60
</IfModule>
